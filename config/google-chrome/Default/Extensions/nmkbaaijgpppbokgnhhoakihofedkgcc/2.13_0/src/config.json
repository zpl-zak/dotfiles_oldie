{
	"config_version": "2",
	"name": "MuteTab",
	"author": "Jared Sohn",
	"version": "2.13",
	"platform_version": "v1.4",
	"description": "Helps narrow down which tab that sound is coming from, and often lets you stop or pause it",
	"modules": {
		"button": {
			"default_popup": "popup.html",
			"default_title": "MuteTab",
			"default_icon": "img/favicon.png"
		},
		"activations": [
		{
			"run_at": "start",
			"patterns": ["http://*/*", "https://*/*"],
	        "scripts": [
				"js/vendor/jquery.js",
				"js/shared/core.js",
				"js/shared/operationssupported.js",
		        "js/vendor/elementclassutil.js",
				"js/contentscript/operation.js",
				"js/contentscript/objectembed.js",
		        "js/contentscript/messaging_contentscript.js",
				"js/contentscript/detectaudiosources.js",
				"js/contentscript/contentscript.js",
		        "js/contentscript/init.js"],
	        "styles": [],
	        "all_frames": true
		}],
		"background": {
			"files": [
				"js/vendor/deepcopy.js",
				"js/shared/analytics.js",
				"js/vendor/ga.js",
				"js/shared/core.js",
				"js/vendor/async.min.js",
				"js/background/injectjs.js",
				"js/options.js",
				"js/background/messaging.js",
				"js/background/displayutil.js",
				"js/background/contextmenus.js",
				"js/shared/operationssupported.js",
				"js/background/stats.js",
				"js/background/background.js"
			]
		},
		"logging": {
			"level": "CRITICAL"
		},
		"contact": true,
		"file": true,
		"is": true,
		"message": true,
		"media": true,
		"prefs": true,
		"tabs": true,
		"request": {
			"permissions": ["http://*/*", "contextMenus", "chrome://favicon/", "https://*/*"]
		},
		"tools": true,
		"reload": true
	}
}
